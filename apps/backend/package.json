{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:prod": "node dist/src/main",
		"preview:prod": "dotenv -e ../../.env -- pnpm build && dotenv -e ../../.env -- node dist/src/main",
		"preview": "dotenv -e ../../.env -- nest start",
		"dev": "dotenv -e ../../.env -- nest start --watch",
		"debug": "dotenv -e ../../.env nest start --debug --watch",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
	},
	"dependencies": {
		"@clerk/clerk-sdk-node": "^4.13.14",
		"@libsql/client": "^0.6.0",
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cookie-parser": "^1.4.6",
		"drizzle-orm": "^0.30.8",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@types/cookie-parser": "^1.4.7",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.3.1",
		"@types/supertest": "^6.0.0",
		"dotenv-cli": "^7.4.1",
		"drizzle-kit": "^0.20.14",
		"jest": "^29.5.0",
		"prettier": "^3.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	},
	"jest": {
		"rootDir": ".",
		"moduleNameMapper": {
			"~/(.*)": "<rootDir>/src/$1"
		},
		"moduleFileExtensions": ["js", "json", "ts"],
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": ["**/*.(t|j)s"],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
